{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "",
        "beforeDevCommand": "",
        "devPath": "../ui",
        "distDir": "../ui",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "yadl",
        "version": "0.0.5"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "window": {
                "all": false,
                "startDragging": true,
                "setIgnoreCursorEvents": true
            },
            "fs": {
                "all": false,
                "readFile": true,
                "writeFile": true,
                "readDir": true,
                "createDir": true,
                "exists": true,
                "scope": ["$CONFIG/yadl"]
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": [],
                "files": {
                    "/usr/share/applications/yadl.desktop": "../yadl.desktop"
                }
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.symlpigeon.yadlapp",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 200,
                "resizable": true,
                "width": 800,
                "transparent": true,
                "alwaysOnTop": true,
                "decorations": false,
                "skipTaskbar": true,
                "label": "main",
                "url": "index.html",
                "fileDropEnabled": false
            },
            {
                "fullscreen": false,
                "height": 40,
                "resizable": true,
                "width": 40,
                "transparent": true,
                "alwaysOnTop": true,
                "decorations": false,
                "skipTaskbar": true,
                "label": "pin",
                "url": "pin.html",
                "fileDropEnabled": false
            }
        ]
    }
}
